<?xml version="1.0" encoding="utf-8"?>
<!--
  Register dialog.
  User fills out basics, picks a security question, adds an answer, then taps Register.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxWidth="@dimen/dialog_container_max_width">

        <!-- Shared header (title and close button) -->
        <include
            android:id="@+id/includeHeader"
            layout="@layout/dialog_header" />

        <!-- Small spacer under header -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/transparent" />

        <!-- First name -->
        <EditText
            android:id="@+id/etFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_first_name"
            android:inputType="textPersonName"
            android:autofillHints="name,givenName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Last name -->
        <EditText
            android:id="@+id/etLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_last_name"
            android:inputType="textPersonName"
            android:autofillHints="name,familyName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Username -->
        <EditText
            android:id="@+id/etUsernameReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_username"
            android:inputType="textPersonName"
            android:autofillHints="username"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPasswordReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Confirm password -->
        <EditText
            android:id="@+id/etPasswordReg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_confirm_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Security question spinner -->
        <Spinner
            android:id="@+id/spSecQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:entries="@array/security_questions"
            android:prompt="@string/choose_sec_question" />

        <!-- Security answer -->
        <EditText
            android:id="@+id/etSecA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/dialog_field_max_width"
            android:ems="20"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_security_answer"
            android:inputType="textCapWords"
            android:autofillHints="name"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/textSecondary" />

        <!-- Error label (hidden until something is missing or invalid) -->
        <TextView
            android:id="@+id/tvRegError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="6dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:text="@string/error_fill_all_fields" />

        <!-- Final register button -->
        <Button
            android:id="@+id/btnRegisterForm"
            style="@style/AppButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/register" />

    </LinearLayout>
</ScrollView>
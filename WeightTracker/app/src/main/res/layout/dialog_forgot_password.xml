<?xml version="1.0" encoding="utf-8"?>
<!--
  Forgot Password dialog layout.
  The flow goes in three steps: enter email → answer security question → reset password.
  Each section shows one at a time as the user moves forward.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxWidth="@dimen/dialog_container_max_width">

        <!-- Reuses a shared header layout for title and icon -->
        <include
            android:id="@+id/includeHeader"
            layout="@layout/dialog_header" />

        <!-- Small spacer under the header -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/transparent" />

        <!-- Step 1: user enters email to look up their account -->
        <LinearLayout
            android:id="@+id/sectionEmail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Email field -->
            <EditText
                android:id="@+id/etEmailLookup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/dialog_field_max_width"
                android:ems="20"
                android:minHeight="48dp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Button to check the email and move to the next step -->
            <Button
                android:id="@+id/btnEmailNext"
                style="@style/AppButton.Primary"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/continue_btn" />
        </LinearLayout>

        <!-- Step 2: security question (hidden until email is verified) -->
        <LinearLayout
            android:id="@+id/sectionQuestion"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <!-- Security question text -->
            <TextView
                android:id="@+id/tvSecQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/dialog_field_max_width"
                android:paddingTop="12dp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:text="@string/tap_load_question" />

            <!-- User enters their security answer -->
            <EditText
                android:id="@+id/etSecAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/dialog_field_max_width"
                android:ems="20"
                android:minHeight="48dp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_security_answer"
                android:inputType="textCapWords"
                android:autofillHints="name"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Button to verify the security answer -->
            <Button
                android:id="@+id/btnAnswerVerify"
                style="@style/AppButton.Primary"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/verify_btn" />
        </LinearLayout>

        <!-- Step 3: reset password (shows after answer is verified) -->
        <LinearLayout
            android:id="@+id/sectionReset"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <!-- New password field -->
            <EditText
                android:id="@+id/etNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/dialog_field_max_width"
                android:ems="20"
                android:minHeight="48dp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_new_password"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:importantForAutofill="yes"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Confirm password field -->
            <EditText
                android:id="@+id/etNewPass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/dialog_field_max_width"
                android:ems="20"
                android:minHeight="48dp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_confirm_new_password"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:importantForAutofill="yes"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Final reset button -->
            <Button
                android:id="@+id/btnResetPassword"
                style="@style/AppButton.Primary"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="@string/reset_password" />
        </LinearLayout>

        <!-- Error message area (hidden until needed) -->
        <TextView
            android:id="@+id/tvFpError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:text="@string/error_fill_all_fields" />

    </LinearLayout>
</ScrollView>